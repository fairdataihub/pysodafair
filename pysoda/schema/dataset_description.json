{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metadata_version": {
      "type": "string",
      "description": "The version of the metadata schema used."
    },
    "type": {
      "type": "string",
      "enum": ["experimental", "computational"],
      "description": "The type of the dataset. In short, experimental data should have data collected from subjects and/or samples."
    },
    "standards_information": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "data_standard": {
            "type": "string",
            "description": "The name of the standard used in the project. For example, SPARC."
          },
          "data_standard_version": {
            "type": "string",
            "description": "The version of the standard used in the project. For example, 1.0.0"
          }
        }
      }
    },
    "basic_information": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the project."
        },
        "subtitle": {
          "type": "string",
          "description": "The subtitle of the project."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the project."
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of keywords related to the project."
        },
        "funding": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Funding awards for the project. Listed as free text. E.g., OT2OD025349"
        },
        "acknowledgments": {
          "type": "string",
          "description": "Acknowledgments for the project."
        },
        "license": {
          "type": "string",
          "description": "The license under which the project is released. Use the SPDX license identifier."
        }
      },
      "required": []
    },
    "funding_information": {
      "type": "object",
      "properties": {
        "funding_consortium": {
          "type": "string",
          "description": "The name of the funding consortium."
        },
        "funding_agency": {
          "type": "string",
          "description": "The name of the funding agency."
        },
        "award_number": {
          "type": "string",
          "description": "The award number for the funding."
        }
      }
    },
    "study_information": {
      "type": "object",
      "properties": {
        "study_purpose": {
          "type": "string",
          "description": "The purpose of the study."
        },
        "study_data_collection": {
          "type": "string",
          "description": "The data collection methods used in the study."
        },
        "study_primary_conclusion": {
          "type": "string",
          "description": "The primary conclusion of the study."
        },
        "study_organ_system": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "The organ system(s) studied in the research."
        },
        "study_approach": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "The approach used in the study. E.g., electrophysiology"
        },
        "study_technique": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "The technique(s) used in the study. E.g., patch clamp, whole cell recording"
        },
        "study_collection_title": {
          "type": "string",
          "description": "The title of the study collection this dataset belongs to, if one exists."
        }
      },
      "required": []
    },
    "contributor_information": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "contributor_orcid_id": {
            "type": "string",
            "pattern": "^https://orcid.org/000[09]-00[01][0-9]-[0-9]{4}-[0-9]{3}([0-9]|X)$",
            "description": "The ORCiD for this contributor. Must be a valid ORCID URL format."
          },
          "contributor_affiliation": {
            "type": "string",
            "pattern": "^https://ror.org/0[0-9a-z]{6}[0-9]{2}$",
            "description": "The institutional affiliation for this contributor."
          },
          "contributor_name": {
            "type": "string",
            "pattern": "^(([Vv]an|[Vv]an [Dd]e[rn]?|[Vv]an [Tt]|[Vv]ander|[Vv]on|[Vv]on [Dd]e[rn]?|[Zz]u|[Zz]ur|[Vv]om|[Dd]e|[Dd]es|[Dd]u|[Dd]e [Ll]a|[Dd]e [Ll]es|[Dd]e [Ll]os|[Ll]e|[Ll]a|[Ll]es|[Dd]el|[Dd]e [Ll]os|[Dd]e [Ll]a|[Dd]e [Ll]as|[Dd]a|[Dd]o|[Dd]i|[Dd]ell[ao]|[Dd]ell[ei]|[Dd]ai|[Dd]al|[Dd]alle|[Oo]'|[Mm]c|[Mm]ac|[Aa]l|[Ee]l|[Aa]bd [Aa]l|[Aa]bu|[Ii]bn|[Ff]itz|[Aa]p|[Bb]en|[Bb]ar|[Bb]at) )?[^, ]+, [^,]+$",
            "description": "The name of the contributor. The format should be 'Last Name, First Name'. Supports international family name prefixes (van, von, de, del, etc.)."
          },
          "contributor_role": {
            "type": "string",
            "enum": [
              "CorrespondingAuthor",
              "ContactPerson",
              "Creator",
              "DataCollector",
              "DataCurator",
              "DataManager",
              "Distributor",
              "Editor",
              "HostingInstitution",
              "PrincipalInvestigator",
              "CoInvestigator",
              "Producer",
              "ProjectLeader",
              "ProjectManager",
              "ProjectMember",
              "RegistrationAgency",
              "RegistrationAuthority",
              "RelatedPerson",
              "Researcher",
              "ResearchGroup",
              "RightsHolder",
              "Sponsor",
              "Supervisor",
              "WorkPackageLeader",
              "Other"
            ],
            "description": "The role of the contributor in the project. There must be at least one PrincipalInvestigator."
          }
        }
      }
    },
    "related_resource_information": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "identifier_description": {
            "type": "string"
          },
          "relation_type": {
            "type": "string",
            "enum": [
              "IsProtocolFor",
              "HasProtocol",
              "IsSoftwareFor",
              "HasSoftware",
              "SharesEntitiesWithDataset",
              "IsCitedBy",
              "Cites",
              "IsSupplementTo",
              "IsSupplementedBy",
              "IsContinuedBy",
              "Continues",
              "IsDescribedBy",
              "Describes",
              "HasMetadata",
              "IsMetadataFor",
              "HasVersion",
              "IsVersionOf",
              "IsNewVersionOf",
              "IsPreviousVersionOf",
              "IsPartOf",
              "HasPart",
              "IsPublishedIn",
              "IsReferencedBy",
              "References",
              "IsDocumentedBy",
              "Documents",
              "IsCompiledBy",
              "Compiles",
              "IsVariantFormOf",
              "IsOriginalFormOf",
              "IsIdenticalTo",
              "IsReviewedBy",
              "Reviews",
              "IsDerivedFrom",
              "IsSourceOf",
              "IsRequiredBy",
              "Requires",
              "IsObsoletedBy",
              "Obsoletes"
            ],
            "description": "The relationship that this dataset has to the related identifier. For example, the originating article would be this dataset IsDescribedBy originating article."
          },
          "identifier": {
            "type": "string"
          },
          "identifier_type": {
            "type": "string",
            "enum": [
              "ARK",
              "arXiv",
              "bibcode",
              "DOI",
              "EAN13",
              "EISSN",
              "Handle",
              "IGSN",
              "ISBN",
              "ISSN",
              "ISTC",
              "LISSN",
              "LSID",
              "PMID",
              "PURL",
              "UPC",
              "URL",
              "URN",
              "w3id"
            ]
          }
        },
        "required": []
      }
    },
    "participant_information": {
      "type": "object",
      "properties": {
        "number_of_subjects": {
          "type": "integer",
          "minimum": 0,
          "description": "The number of subjects in the study."
        },
        "number_of_samples": {
          "type": "integer",
          "minimum": 0,
          "description": "The number of samples in the study."
        },
        "number_of_sites": {
          "type": "integer",
          "minimum": 0,
          "description": "The number of sites in the study."
        },
        "number_of_performances": {
          "type": "integer",
          "minimum": 0,
          "description": "The number of performance in the study."
        }
      },
      "required": []
    },
    "data_dictionary_information": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "data_dictionary_path": {
            "type": "string",
            "description": "The path to the data dictionary file. Should be relative to the root of the dataset. E.g., 'code/data_dictionary/schema.json'"
          },
          "data_dictionary_type": {
            "type": "string",
            "description": "The type of the data dictionary. E.g., json-schema"
          },
          "data_dictionary_description": {
            "type": "string",
            "description": "A description of the data dictionary."
          }
        }
      }
    }
  },
  "required": ["metadata_version"]
}
